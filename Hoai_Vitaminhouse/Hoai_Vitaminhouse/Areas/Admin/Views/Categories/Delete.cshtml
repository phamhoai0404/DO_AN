
@model Hoai_Vitaminhouse.Models.Category

@{

    ViewBag.Title = "Bạn chắc chắn muốn xóa danh mục #" + Model.CategoryId + " ?";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="flex-jc">
    <div class="h-detail ">
        <div class="h-group-detail">
            <div class="h-detail-item flex">
                <div class="h-detail-title">Mã danh mục:</div>
                <div>#@Model.CategoryId</div>
            </div>
            <div class="h-detail-item flex">
                <div class="h-detail-title">Tên danh mục:</div>
                <div>@Model.CategoryName</div>
            </div>
            <div class="h-detail-item flex">
                <div class="h-detail-title">Mô tả danh mục:</div>
                <div class="h-detail-detail">
                    <p>@Model.CategoryDescription</p>
                </div>
            </div>
        </div>
        <div class="h-group-function-detail">
            <div class="h-function-detail-item flex-jc">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="col-md-offset-2 col-md-12 text-center">
                        <button type="submit" class="btn btn-danger" style="padding: 6px 20px;">
                            Xóa
                        </button> &nbsp; | &nbsp;

                        @Html.ActionLink("Hủy", "Index")
                    </div>
                    <br />
                }
            </div>
        </div>
        <div>
            @if (ViewBag.ErrorDeleteDanhMuc != null)
            {
                <br />
                <div class="alert alert-danger" role="alert">@ViewBag.ErrorDeleteDanhMuc</div>
            }
        </div>
    </div>
   
</div>

