@model PagedList.IPagedList<Hoai_Vitaminhouse.Models.Category>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Danh sách danh mục sản phẩm";

    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section CSSPartial{
    <link href="~/Areas/Admin/Assets/css/table.css" rel="stylesheet">
}
<div style="background: white; padding: 20px;">
    <div class="row">
        <div class="col-lg-12 mb-2 flex-jse">
            <button type="button" class="btn" style="border: 2px solid #73a33e; ">
                <a href="@Url.Action("Create","Categories")" style="color: #73a33e !important; font-weight: 700;">
                    <i class="bi bi-plus-square-dotted"></i>
                    Thêm danh mục
                </a>
            </button>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <table class="m-table-fe">
                <thead>
                    <tr>
                        <th class="first">Mã danh mục</th>
                        <th>Tên danh mục</th>
                        <th colspan="3" class="last">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="border-left:none !important;"><div><b>@item.CategoryId</b></div></td>

                            <td>
                                <div>
                                    @item.CategoryName
                                </div>
                            </td>

                            <td class="m-table-function-s" title="Xem chi tiết danh mục">
                                <a href="@Url.Action("Details","Categories",new {id = item.CategoryId})">
                                    <i class="bi bi-eye-fill" style="color: blue;"></i>
                                </a>
                            </td>
                            <td class="m-table-function-s" title="Sửa danh mục">
                                <a href="@Url.Action("Edit","Categories",new {id = item.CategoryId})">
                                    <i class="bi bi-pencil-fill" style="color: orange;"></i>
                                </a>
                            </td>
                            <td class="m-table-function-s" title="Xóa danh mục">
                                <a href="@Url.Action("Delete","Categories",new {id = item.CategoryId})">
                                    <i class="bi bi-trash-fill" style="color: red;"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>


        </div>
    </div>
</div>

<div class="row padding-table">

    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), new PagedListRenderOptions()
   {
       UlElementClasses = new string[] { "store-pagination" },
   })

</div>