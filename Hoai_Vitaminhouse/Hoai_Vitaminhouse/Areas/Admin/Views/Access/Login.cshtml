<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Thiết lập chung -->
    @{
        Html.RenderPartial("_TitleHeadAdmin");
    }

    <!-- File CSS Login -->
    <link href="~/Areas/Admin/Assets/css/login.css" rel="stylesheet">



</head>

<!--Coded with love by Mutiullah Samim-->

<body>
    <main>
        <div class="container h-login-all">
            <div class="row justify-content-center">
                <div class="col-lg-5">
                    <div class="card shadow-lg border-0 rounded-lg mt-5">
                        <div class="card-header" style="background: none !important;">
                            <div style="display: flex; align-items: center; justify-content: center; margin: 30px auto;">
                                <div style="width: 20%; ">
                                    <img src="~/Areas/Admin/Assets/img/logo_4_v3.jpg" alt="" style="width: 100%">
                                </div>
                                <div style="font-size: 35px; font-weight: 600; color: #18543B;">VITAMIN HOUSE</div>
                            </div>
                        </div>
                        <div class="card-body">
                            <form action="/Admin/Access/Login" method="post">
                                @Html.AntiForgeryToken()
                                <div class="form-group mt-2">
                                    @if (ViewBag.ErrorLogin != null)
                                    {
                                        <div class="alert alert-danger" role="alert">
                                            @ViewBag.ErrorLogin
                                        </div>
                                    }
                                </div>
                                <div class="form-group">
                                    <label class="small mb-1" for="inputUserName">Email:</label>
                                    <input class="form-control h-login-input" id="inputUserName" type="email" name="email"
                                           placeholder="Địa chỉ Email" style="height: 55px;" />
                                </div>
                                <div class="form-group mt-3">
                                    <label class="small mb-1" for="inputPassword">Mật khẩu:</label>
                                    <input class="form-control " id="inputPassword" type="password" name="password"
                                           placeholder="Nhập mật khẩu" style="height: 55px;" />
                                </div>

                                <div class="form-group mt-4">
                                    <a href="" style="text-decoration: none; ">
                                        <button type="submit" class="btn btn-success h-button-login">
                                            <h5 style="margin-bottom: 0; font-size: 22px;">Đăng nhập</h5>
                                        </button>
                                    </a>
                                    <div class="h-login-group-footer " style="">
                                        <div class="h-login-item-footer">
                                            <div>Bạn muốn trở lại trang chủ?</div>
                                            <a href="/" style="margin-left: 5px;">
                                                Click tại đây
                                            </a>
                                        </div>
                                        <div class="h-login-item-footer">
                                            <div>Bạn quên mật khẩu đăng nhập?</div>
                                            <a href="" style="margin-left: 5px;">
                                                Lấy lại mật khẩu
                                            </a>
                                        </div>

                                    </div>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </main>

</body>

</html>