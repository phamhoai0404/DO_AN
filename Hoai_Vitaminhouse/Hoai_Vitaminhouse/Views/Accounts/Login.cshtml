
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="breadcrumb-wrapper" class="breadcrumb-w-img" style="background-image: url(/wwwroot/img/products/bg_sanpham_6.jpg); ">
    <div class="breadcrumb-overlay"></div>
    <div class="breadcrumb-content">
        <div class="wrapper">
            <div style="text-align: center;">
                <div class="breadcrumb-big">
                    <h2 style="font-size: 38px;">
                        ĐĂNG NHẬP
                    </h2>
                </div>
                <div class="breadcrumb-small" style="font-size: 20px; padding-top: 10px;">
                    <a href="@Url.Action("Index","Home")" title="">TRANG CHỦ</a>
                    <span aria-hidden="true">/</span>
                    <span>TÀI KHOẢN</span>
                    <span aria-hidden="true">/</span>
                    <span>KHÁCH HÀNG</span>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="grocino-form ">

    <div class="container">

        <div class="row" >

            <div class="col-lg-6 col-md-8 col-sm-10 col-12 mx-auto" style="display:flex;justify-content:center;">

                <form method="post" action="@Url.Action("Login","Accounts")" class="form-signin m-login-account-">
                    @Html.AntiForgeryToken()
                    <div class="ui form">
                        <div class="ui left icon input w-100 ">
                            <h1 class="m-title-login-account">ĐĂNG NHẬP</h1>

                        </div>

                        <br /><br />
                        @if (ViewBag.errorLogin != null)
                        {
                            <div class="alert alert-danger mb-2 text-center" role="alert" style="font-size:16px;margin-top:10px;">
                                @ViewBag.errorLogin
                            </div>
                        }

                        <br />
                        <div class="ui left icon input w-100 field">
                            <input type="email" name="email" placeholder="Nhập địa chỉ email" style="color: #18543B !important;" />

                        </div>
                        <div class="ui left icon input w-100 field">

                            <input type="password" name="password" placeholder="Mật khẩu" style="color: #18543B !important;" />

                            <i class="uil uil-unlock icon"></i>

                        </div>


                    </div>

                    <button class="m-button-login-fe" type="submit" >Đăng nhập</button>

                    <div class="m-footer-login" > Bạn quên mật khẩu? <span><a>Lấy lại mật khẩu</a></span></div>
                    <div class="m-footer-login" > 
                        Bạn chưa có tài khoản? 
                        <span>
                            <a  href="@Url.Action("Register", "Accounts")">Đăng ký ngay </a>
                        </span></div>
                </form>

            </div>

        </div>

    </div>

</div>

