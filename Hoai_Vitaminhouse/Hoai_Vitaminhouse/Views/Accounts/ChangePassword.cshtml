@model  Hoai_Vitaminhouse.Models.Account

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="breadcrumb-wrapper" class="breadcrumb-w-img" style="background-image: url(/wwwroot/img/products/bg_sanpham_6.jpg); ">
    <div class="breadcrumb-overlay"></div>
    <div class="breadcrumb-content">
        <div class="wrapper">
            <div style="text-align: center;">
                <div class="breadcrumb-big">
                    <h2 style="font-size: 38px;">
                        ĐỔI MẬT KHẨU
                    </h2>
                </div>
                <div class="breadcrumb-small" style="font-size: 20px; padding-top: 10px;">
                    <a href="@Url.Action("Index","Home")" title="">TRANG CHỦ</a>
                    <span aria-hidden="true">/</span>
                    <span>TÀI KHOẢN</span>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="grocino-form ">

    <div class="container">

        <div class="row">

            <div class="col-lg-6 col-md-8 col-sm-10 col-12 mx-auto" style="display:flex;justify-content:center;">


                <form method="post" action="@Url.Action("ChangePassword","Accounts")" class=" form-signin-two m-login-account- m-resss-fe">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.AccountId, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.HiddenFor(model => model.AccountName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.HiddenFor(model => model.AccountPhone, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.HiddenFor(model => model.AccountAddress, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.HiddenFor(model => model.AccountEmail, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.HiddenFor(model => model.AccountStatus, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.HiddenFor(model => model.AccountRole, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.HiddenFor(model => model.AccountPassword, new { htmlAttributes = new { @class = "form-control" } })
                    <div class="ui form">
                        <div class="ui left icon input w-100 ">
                            <h1 class="m-title-login-account">ĐỔI MẬT KHẨU</h1>

                        </div>
                        <br /><br />
                        @if (ViewBag.LoiMatKhau != null)
                        {
                            <div class="alert alert-danger mb-2 text-center" role="alert" style="font-size:16px;margin-top:10px;">
                                @ViewBag.LoiMatKhau 
                            </div>
                        }
                        <div class="ui left icon input w-100 field">
                            <input type="password" name="oldPassword" placeholder="Mật khẩu cũ" />
                            <i class="uil uil-unlock icon"></i>
                        </div>
                        <div class="ui left icon input w-100 field">
                            <input type="password" name="newPassword" placeholder="Mật khẩu mới" />
                            <i class="uil uil-unlock icon"></i>
                        </div>
                        <div class="ui left icon input w-100 field">
                            <input type="password" name="confirmPassword" placeholder="Xác nhận mật khẩu mới" />
                            <i class="uil uil-unlock icon"></i>
                        </div>

                    </div>

                    <button class="m-button-login-fe" type="submit" style="margin-top: 20px;">Cập nhật</button>
                    <div class="m-footer-login"> Bạn muốn sửa tài khoản? 
                    <span>
                        <a href="@Url.Action("ChangeInfo", "Accounts")">Click tại đây</a>
                    </span></div>
                </form>

            </div>

        </div>

    </div>

</div>


@section Scripts {
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}
